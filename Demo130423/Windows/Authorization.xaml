<Window x:Class="Demo130423.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo130423.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" FontFamily="Comic Sans MS" FontSize="20" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Windows/logo.png" Width="200"/>
            <Label/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="90">Логин:</TextBlock>
                <TextBox x:Name="Login" Width="200" Background="#FF76E383" />
            </StackPanel>
            <Label/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="90">Пароль:</TextBlock>
                <TextBox x:Name="Password" Width="200" Background="#FF76E383" />
            </StackPanel>
            <Label/>
            <Button x:Name="Enter" Background="#FF76E383" Click="Enter_Click">Войти</Button>
            <Label/>
            <Button x:Name="GuestEnter" Background="#FF76E383" Click="GuestEnter_Click">Войти как гость</Button>
        </StackPanel>
    </Grid>
</Window>
